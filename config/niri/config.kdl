// Niri configuration - Rose Pine Moon theme

// Startup
spawn-at-startup "foot" "--server"
spawn-at-startup "wl-paste" "--watch" "cliphist" "store"

prefer-no-csd

screenshot-path "~/Pictures/Screenshots/Screenshot %Y-%m-%d %H-%M-%S.png"

hotkey-overlay {
    skip-at-startup
}

environment {
    NIXOS_OZONE_WL "1"
    XCURSOR_SIZE "24"
    QT_CURSOR_SIZE "24"
}

cursor {
    xcursor-theme "Vanilla-DMZ"
    xcursor-size 24
    hide-when-typing
}

input {
    keyboard {
        xkb {
            layout "us,ca"
            options "caps:escape"
        }
        repeat-delay 250
        repeat-rate 30
    }

    touchpad {
        tap
    }
}

// Monitors
output "HDMI-A-1" {
    mode "1920x1080"
    position x=0 y=0
}

output "eDP-1" {
    mode "1920x1080@60.000"
    position x=0 y=1080
}

layout {
    gaps 0

    center-focused-column "never"

    default-column-width { proportion 1.0; }

    focus-ring {
        width 0
        active-color "#c4a7e7"
        inactive-color "#6e6a86"
        urgent-color "#eb6f92"
    }

    border {
        off
    }

    shadow {
        off
    }
}

animations {
    // off
}

// Named workspaces
workspace "mail"
workspace "chrome"
workspace "editor"
workspace "claude"
workspace "database"
workspace "terminal"

// Window rules
window-rule {
    match app-id="launcher"
    open-floating true
}

window-rule {
    match app-id="thunderbird"
    open-on-workspace "mail"
}

window-rule {
    match app-id="google-chrome"
    open-on-workspace "chrome"
}

window-rule {
    match app-id="editor"
    open-on-workspace "editor"
}

window-rule {
    match app-id="claude"
    open-on-workspace "claude"
}

window-rule {
    match app-id="DBeaver"
    open-on-workspace "database"
}

window-rule {
    match app-id="terminal"
    open-on-workspace "terminal"
}

// Keybindings
binds {
    // Window management
    Mod+Q { close-window; }

    // Workspaces
    Mod+M { focus-workspace "mail"; }
    Mod+W { focus-workspace "chrome"; }
    Mod+E { focus-workspace "editor"; }
    Mod+C { focus-workspace "claude"; }
    Mod+D { focus-workspace "database"; }
    Mod+I { focus-workspace "terminal"; }

    // Overview
    Mod+Space { toggle-overview; }

    // Focus by index
    Mod+1 { focus-column 1; }
    Mod+2 { focus-column 2; }
    Mod+3 { focus-column 3; }
    Mod+4 { focus-column 4; }
    Mod+5 { focus-column 5; }

    // Focus
    Mod+H { focus-column-left; }
    Mod+L { focus-column-right; }
    Mod+J { focus-workspace-down; }
    Mod+K { focus-workspace-up; }

    // Movement
    Mod+Shift+H { move-column-left; }
    Mod+Shift+L { move-column-right; }
    Mod+Shift+J { move-window-to-workspace-down; }
    Mod+Shift+K { move-window-to-workspace-up; }

    // Resize
    Mod+Ctrl+H { set-column-width "-10%"; }
    Mod+Ctrl+L { set-column-width "+10%"; }

    // Fullscreen / maximize
    // Mod+F { fullscreen-window; }
    Mod+F { maximize-column; }

    // Brightness
    Mod+Left { spawn "brightnessctl" "set" "5%-"; }
    Mod+Right { spawn "brightnessctl" "set" "+5%"; }

    // Volume
    Mod+Up { spawn "pactl" "set-sink-volume" "@DEFAULT_SINK@" "+5%"; }
    Mod+Down { spawn "pactl" "set-sink-volume" "@DEFAULT_SINK@" "-5%"; }

    // Help menu
    Mod+Shift+Slash { show-hotkey-overlay; }

    // Launchers
    Mod+Return { spawn "footclient" "--app-id=terminal" "-e" "tmux"; }
    Mod+O { spawn "bash" "/home/jofre/.dotfiles/scripts/apps-launcher.sh"; }
    Mod+U { spawn "bash" "/home/jofre/.dotfiles/scripts/bookmarks-launcher.sh"; }
    Mod+X { spawn "bash" "/home/jofre/.dotfiles/scripts/commands-launcher.sh"; }
}
