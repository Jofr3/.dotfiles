{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "anthropic": {
      "models": {
        "claude-sonnet-4-5-20250929": {
          "options": {
            "thinking": {
              "type": "disabled",
              "budgetTokens": 16000
            }
          }
        }
      }
    }
  },
  "tui": {
    "scroll_speed": 15
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "ctx7sk-57a11e2f-1ae9-4b8c-93c5-e911c0ceacc0"
      }
    },
    "nixos": {
      "type": "local",
      "command": ["nix", "run", "github:utensils/mcp-nixos", "--"]
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest", "-e", "/home/jofre/.nix-profile/bin/google-chrome-stable", "--browser-url=http://127.0.0.1:9222"]
    },
    "neovim": {
      "type": "local",
      "command": [ "npx",  "-y", "mcp-neovim-server" ],
      "environment": {
        "ALLOW_SHELL_COMMANDS": "true",
        "NVIM_SOCKET_PATH": "/tmp/nvim"
      }
    }
  },
  "tools": {
    "context7_resolve-library-id": false,
    "context7_get-library-docs": false,
    "nixos_*": false,
    "neovim_*": false,
    "chrome_*": false
  },
  "agent": {
    "docs": {
      "description": "Search documentation using Context7",
      "mode": "subagent",
      "tools": {
        "context7_resolve-library-id": true,
        "context7_get-library-docs": true
      }
    },
    "nixos": {
      "description": "Search NixOS options, packages, and configuration",
      "mode": "subagent",
      "tools": {
        "nixos_*": true
      }
    },
    "database": {
      "description": "Interact with databases for schema design, queries, and migrations",
      "mode": "subagent"
    },
    "neovim": {
      "description": "Interact with Neovim through MCP for advanced text editing and navigation",
      "mode": "subagent",
      "tools": {
        "neovim_*": true
      }
    },
    "chrome": {
      "description": "Interact with Chrome browser via DevTools protocol for automation and testing",
      "mode": "subagent",
      "tools": {
        "chrome_*": true
      }
    }
  },
  "command": {
    "docs": {
      "description": "Search library documentation",
      "template": "@docs $ARGUMENTS",
      "agent": "docs",
      "subtask": true
    },
    "nixos": {
      "description": "Search NixOS options and packages",
      "template": "@nixos $ARGUMENTS",
      "agent": "nixos",
      "subtask": true
    },
    "db": {
      "description": "Database operations and schema design",
      "template": "@database $ARGUMENTS",
      "agent": "database",
      "subtask": true
    },
    "vim": {
      "description": "Neovim text editing operations",
      "template": "@neovim $ARGUMENTS",
      "agent": "neovim",
      "subtask": true
    },
    "chrome": {
      "description": "Chrome browser automation and testing",
      "template": "@chrome $ARGUMENTS",
      "agent": "chrome",
      "subtask": true
    }
  }
}
