{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "anthropic": {
      "models": {
        "claude-sonnet-4-5-20250929": {
          "options": {
            "thinking": {
              "type": "disabled",
              "budgetTokens": 16000
            }
          }
        }
      }
    }
  },
  "tui": {
    "scroll_speed": 6
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "ctx7sk-57a11e2f-1ae9-4b8c-93c5-e911c0ceacc0"
      }
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "nixos": {
      "type": "local",
      "command": ["run", "github:utensils/mcp-nixos", "--"]
    }
  },
  "tools": {
    "context7_resolve-library-id": false,
    "context7_get-library-docs": false,
    "gh_grep_*": false,
    "nixos_*": false
  },
  "agent": {
    "docs": {
      "description": "Search documentation using Context7",
      "mode": "subagent",
      "tools": {
        "context7_resolve-library-id": true,
        "context7_get-library-docs": true
      }
    },
    "examples": {
      "description": "Search code examples from GitHub repositories",
      "mode": "subagent",
      "tools": {
        "gh_grep_*": true
      }
    },
    "nixos": {
      "description": "Search NixOS options, packages, and configuration",
      "mode": "subagent",
      "tools": {
        "nixos_*": true
      }
    }
  },
  "command": {
    "docs": {
      "description": "Search library documentation",
      "template": "@docs $ARGUMENTS",
      "agent": "docs",
      "subtask": true
    },
    "examples": {
      "description": "Search code examples from GitHub",
      "template": "@examples $ARGUMENTS",
      "agent": "examples",
      "subtask": true
    },
    "nixos": {
      "description": "Search NixOS options and packages",
      "template": "@nixos $ARGUMENTS",
      "agent": "nixos",
      "subtask": true
    }
  }
}
